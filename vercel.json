{
  "version": 2,
  "builds": [
    {
      "src": "src/app/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "src/app/public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/frontend/App.tsx",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "src/app/index.ts" },
    { "src": "/(.*)", "dest": "src/frontend/App.tsx" }
  ]
}
